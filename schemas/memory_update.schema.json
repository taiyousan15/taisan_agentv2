{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memory Update",
  "description": "Schema for memory update proposal",
  "type": "object",
  "properties": {
    "job_id": {
      "type": "string",
      "description": "Source job ID"
    },
    "task_name": {
      "type": "string",
      "description": "Task name"
    },
    "pattern_type": {
      "type": "string",
      "description": "Pattern type (e.g., 'summarization', 'translation')"
    },
    "success_criteria": {
      "type": "string",
      "description": "What defined success"
    },
    "abstracted_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "General steps (no specific file names)"
    },
    "artifacts_validated": {
      "type": "integer",
      "description": "Number of artifacts validated"
    },
    "total_artifacts": {
      "type": "integer",
      "description": "Total artifacts produced"
    }
  },
  "required": ["job_id", "task_name", "pattern_type", "artifacts_validated", "total_artifacts"],
  "additionalProperties": false
}
